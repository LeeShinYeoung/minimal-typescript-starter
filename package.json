{
  "name": "minimal-typescript-starter",
  "description": "Configure a minimal TypeScript project with just one command",
  "version": "0.0.2",
  "author": "LeeShinYeoung",
  "license": "MIT",
  "bin": "dist/index.js",
  "keywords": [
    "nodejs",
    "javascript",
    "typescript",
    "starter",
    "minimal"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/LeeShinYeoung/minimal-typescript-starter.git"
  },
  "scripts": {
    "start": "nodemon --watch 'src/**/*.ts' --exec \"ts-node\" src/index.ts",
    "build": "tsc",
    "prettier": "npx prettier --config .prettierrc 'src/**/*.ts' --write",
    "lint": "npx eslint src/**/*.ts"
  },
  "dependencies": {
    "prompts": "^2.4.2"
  },
  "devDependencies": {
    "@types/prompts": "^2.4.2",
    "@typescript-eslint/eslint-plugin": "^5.40.0",
    "@typescript-eslint/parser": "^5.40.0",
    "eslint": "^8.25.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "nodemon": "^2.0.20",
    "prettier": "^2.7.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  }
}
